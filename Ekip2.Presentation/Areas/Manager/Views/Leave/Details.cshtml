@model Ekip2.Presentation.Areas.Manager.Models.LeaveVMs.LeaveDetailsVM

@{
    ViewData["Title"] = "Leave Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card mb-3" style="max-width: 1500px; margin: 100px auto;">
    <div class="row g-0">
        <div class="col-md-12">
            <div class="card-header text-center" style="background-color: #7978E9; color: white;">
                <h4><h2>Leave Details</h2></h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card-text">
                            <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
                           <p><strong>Employee:</strong> @Model.ManagerFullName</p>
                            <p><strong>Status:</strong> @Model.LeaveStatus</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card-text">
                            <p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
                            <p><strong>Leave Type:</strong> @Model.LeaveTypeType</p>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "Employee")" class="btn btn-primary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            border: none;
            max-width: 1500px;
        }

        .card-header {
            border-bottom: 2px solid #5c5ab3;
            padding: 15px 20px;
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            color: #7978E9;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .card-text p {
            margin-bottom: 10px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
        }

        .btn-primary {
            background-color: #ddd;
            border-color: #ddd;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #5c5ab3;
                border-color: #5c5ab3;
            }

        h2 {
            text-align: center;
            color: #ddd;
            margin-top: 20px;
        }
    </style>
}
