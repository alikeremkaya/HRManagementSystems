@model Ekip2.Presentation.Areas.Manager.Models.SalaryVMs.SalaryCreateVM

<div class="modal-header" style="background-color: #7978E9; color: white;">
    <h2 class="modal-title" id="createSalaryModalLabel">Create Salary</h2>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Amount" class="control-label">@Localizer["Amount"]</label>
            <input asp-for="Amount" class="form-control" required/>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SalaryDate" class="control-label">@Localizer["SalaryDate"]</label>
            <input asp-for="SalaryDate" type="date" class="form-control"required />
            <span asp-validation-for="SalaryDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ManagerId" class="control-label">@Localizer["Employee"]</label>
            <select asp-for="ManagerId" asp-items="@Model.Managers" class="form-control" required>
                <option value="">--- @Localizer["SelectEmployee"] ---</option>
            </select>
            <span asp-validation-for="ManagerId" class="text-danger"></span>
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">@Localizer["Create"]</button
        </div>
    </form>
</div>
<div class="modal-footer">
    <a asp-action="Index" class="btn btn-secondary">@Localizer["BackToList"]</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#createSalaryModal').on('shown.bs.modal', function () {
                $('#createSalaryModal input').first().trigger('focus');
            });
        });
    </script>
}


    <style>
       

        .form-group {
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #7978E9;
            border-color: #7978E9;
            color: white;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #5c5ab3;
                border-color: #5c5ab3;
            }

        .btn-secondary {
            background-color: #ddd;
            border-color: #ddd;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .btn-secondary:hover {
                background-color: #bbb;
                border-color: #bbb;
            }

        h2 {
            text-align: center;
            color: white;
            margin: 0;
        }
    </style>



