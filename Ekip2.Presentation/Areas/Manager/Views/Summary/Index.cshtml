        background-color: #fff;
        border-bottom: 1px solid #ddd;
    }

    .tabs {
        margin-bottom: 20px;
        border-bottom: 2px solid #7978E9;
    }

        .tabs ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: flex-start;
        }

            .tabs ul li {
                margin-right: 10px;
            }

                .tabs ul li a {
                    text-decoration: none;
                    padding: 10px 20px;
                    display: block;
                    color: #7978E9;
