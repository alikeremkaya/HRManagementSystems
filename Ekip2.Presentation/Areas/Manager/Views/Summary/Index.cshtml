                    .tabs ul li a.active {
                        color: white;
                        background-color: #7978E9;
                        border-color: #7978E9;
                    }

    .table-responsive {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        background-color: white;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        .table thead th {
            background-color: #7978E9;
            color: white;
            border-bottom: 2px solid #7978E9;
        }

    body {
        background: #F5F7FF;
    }

    .container {
        margin-top: 50px;
    }

    .page-title {
        color: #7978E9;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2em;
    }

    .btn-create {
        text-decoration: none;
        color: white;
        font-weight: bold;
        background-color: #7978E9;
        padding: 10px 20px;
        border-radius: 25px;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

        .btn-create:hover {
            background-color: #5c5ab3;
        }

    .btn-info {
        background-color: #7978E9;
        border-color: #7978E9;
        color: white;
    }

        .btn-info:hover {
            background-color: #7978E9;
            border-color: #7978E9;
        }
</style>
