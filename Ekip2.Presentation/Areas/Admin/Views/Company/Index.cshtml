        font-size: 2em;
    }

    .card-custom {
        margin: 15px;
    }

        .card-custom:hover::after {
            transform: scaleY(1);
        }

    .card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 20px;
        height: 100%;
    }

    .card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .card-footer {
        margin-top: auto;
    }

    .card-actions {
        display: flex;
        justify-content: space-around;
    }

    .btn {
        text-decoration: none;
        color: white;
        padding: 8px 15px;
        border-radius: 5px;
        font-size: 0.8em;
        width: 45%;
        text-align: center;
    }

    .btn-update,
    .btn-delete {
        text-decoration: none;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

    .btn-update {
        background-color: #7978E9;
        border: 1px solid #7978E9;
        color: white;
    }

    .btn-delete {
        background-color: #dc3545;
        border: 1px solid #dc3545;
        color: white;
    }

        .btn-update:hover,
        .btn-delete:hover {
            background-color: #7978E9;
        }

    .custom-btn {
        text-decoration: none;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 25px;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

    .custom-btn-create {
        background-color: #7978E9;
    }

    .createCompany {
        text-decoration: none;
        color: white;
        font-weight: bold;
        background-color: #7978E9;
        padding: 10px 20px;
        border-radius: 25px;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

    .modal-content {
        border-radius: 10px;
    }

    .modal-header {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        background-color: #7978E9;
        color: white;
        border-bottom: none;
    }

    .modal-body {
        padding: 20px;
    }

    .modal-footer {
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        background-color: #f8f9fa;
    }

    .btn-create {
        text-decoration: none;
        color: white;
        font-weight: bold;
        background-color: #7978E9;
        padding: 8px 15px;
        border-radius: 15px;
        display: inline-block;
        transition: background-color 0.2s ease;
        font-size: 0.9em;
        width: 130px;
        text-align: center;
    }

    .image-container {
        height: 200px;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-bottom: 15px;
        background-color: #f9f9f9;
    }

    .image-preview {
        max-height: 100%;
        max-width: 100%;
        object-fit: cover;
    }

    .swal-btn {
        padding: 8px 16px;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
    }

    .swal-btn-confirm {
        background-color: #28a745;
        color: white;
    }

    .swal-btn-cancel {
        background-color: #dc3545;
        color: white;
    }
</style>
