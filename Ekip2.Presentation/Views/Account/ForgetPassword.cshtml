@model Ekip2.Presentation.Models.ForgotPasswordVMs.ForgetPasswordVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Forgot Password</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #ffffff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }

        .background .shape {
            height: 200px;
            width: 200px;
            position: absolute;
            border-radius: 50%;
        }

        .shape:first-child {
            background: linear-gradient(#c63dff, #e4a3ff);
            left: -80px;
            top: -80px;
        }

        .shape:last-child {
            background: linear-gradient(to right, #ff512f, #f09819);
            right: -30px;
            bottom: -80px;
        }

        .container {
            width: 100%;
            max-width: 400px;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(10px);
            position: relative;
        }

            .container h3 {
                font-size: 24px;
                font-weight: 600;
                text-align: center;
                color: #333;
                margin-bottom: 20px;
            }

        .back-button {
            position: absolute;
            top: 10px;
            left: 10px;
            font-size: 20px;
            cursor: pointer;
            color: #c63dff;
        }

        label {
            display: block;
            margin-top: 20px;
            font-size: 16px;
            font-weight: 500;
            color: #333;
        }

        input {
            display: block;
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-top: 8px;
            font-size: 14px;
            color: #333;
            background-color: #f9f9f9;
        }

        ::placeholder {
            color: #888;
        }

        button {
            margin-top: 20px;
            width: 100%;
            background-color: #c63dff;
            color: #ffffff;
            padding: 12px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 5px;
            cursor: pointer;
            border: none;
        }

            button:hover {
                background-color: #7b1fa2;
            }

        .modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 80%;
            max-width: 400px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            padding: 20px;
            z-index: 1000;
        }

            .modal.active {
                display: block;
            }

            .modal h2 {
                font-size: 18px;
                font-weight: 600;
                color: #333;
                margin-bottom: 10px;
            }

            .modal p {
                font-size: 14px;
                color: #666;
            }

            .modal .close {
                position: absolute;
                top: 10px;
                right: 10px;
                font-size: 20px;
                font-weight: bold;
                color: #333;
                cursor: pointer;
            }

            .modal button {
                background-color: #c63dff;
                color: #ffffff;
                padding: 10px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 14px;
            }

                .modal button:hover {
                    background-color: #7b1fa2;
                }

    </style>
</head>

<body>
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    <div class="container">
        <div class="back-button" onclick="window.location.href = '/Account/Login';">
            <i class="fas fa-arrow-left"></i>
        </div>
        <h3>Forget Password</h3>

        <form id="resetPasswordForm" asp-action="ForgetPassword" asp-controller="Account" method="post">
            <label for="mailInput">Mail Address</label>
            <input id="mailInput" type="email" asp-for="Mail" placeholder="Enter your email" />

            <span id="error-message" class="error-message" style="display:none; color:red;">The email address does not exist in our system.</span>
            <button type="button" id="sendResetLinkBtn">Send Reset Link</button>
        </form>

        <!-- Error Modal -->
        <div id="errorModal" class="modal">
            <span class="close" id="closeErrorModal">&times;</span>
            <h2>Error</h2>
            <p id="errorModalMessage"></p>
            <button id="closeErrorModalButton">Close</button>
        </div>

        <!-- Success Modal -->
        <div id="modal" class="modal">
            <span class="close" id="closeModal">&times;</span>
            <h2>Password Reset Link Sent</h2>
            <p>A password reset link has been sent to your email address. Please check your inbox.</p>
            <button id="closeModalButton">Close</button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const closeModalBtn = document.getElementById('closeModalButton');
            const closeModalSpan = document.getElementById('closeModal');
            const closeErrorModalBtn = document.getElementById('closeErrorModalButton');
            const closeErrorModalSpan = document.getElementById('closeErrorModal');
            const modal = document.getElementById('modal');
            const errorModal = document.getElementById('errorModal');
            const errorModalMessage = document.getElementById('errorModalMessage');
            const sendResetLinkBtn = document.getElementById('sendResetLinkBtn');
            const mailInput = document.getElementById('mailInput');
            const resetPasswordForm = document.getElementById('resetPasswordForm');

            // Hata mesajı ViewBag üzerinden gelirse göster
            const serverErrorMessage = '@ViewBag.ErrorMessage';
            if (serverErrorMessage) {
                errorModalMessage.textContent = serverErrorMessage;
                errorModal.classList.add('active');
            }

            // Sunucudan başarı bilgisi al
            const isSuccess = '@ViewBag.IsSuccess';
            if (isSuccess === 'True') {
                modal.classList.add('active');
            }

            sendResetLinkBtn.addEventListener('click', () => {
                if (mailInput.value.trim() === '') {
                    errorModalMessage.textContent = 'Please enter your email address!';
                    errorModal.classList.add('active');

                    setTimeout(() => {
                        errorModal.classList.remove('active');
                    }, 5000); // 5000 milisaniye = 5 saniye

                    return;
                }

                resetPasswordForm.submit();
            });

            // Close modals
            closeModalBtn.addEventListener('click', () => {
                modal.classList.remove('active');
            });

            closeModalSpan.addEventListener('click', () => {
                modal.classList.remove('active');
            });

            closeErrorModalBtn.addEventListener('click', () => {
                errorModal.classList.remove('active');
            });

            closeErrorModalSpan.addEventListener('click', () => {
                errorModal.classList.remove('active');
            });
        });
    </script>
</body>
</html>
