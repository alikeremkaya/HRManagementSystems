@model Ekip2.Presentation.Models.LoginVMs.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = null;
    string x = "@";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>HR Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #ffffff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }

        .background {
            width: 430px;
            height: 520px;
            position: absolute;
            transform: translate(-50%, -50%);
            left: 50%;
            top: 50%;
        }

            .background .shape {
                height: 200px;
                width: 200px;
                position: absolute;
                border-radius: 50%;
            }

        .shape:first-child {
            background: linear-gradient(#c63dff, #e4a3ff);
            left: -80px;
            top: -80px;
        }

        .shape:last-child {
            background: linear-gradient(to right, #ff512f, #f09819);
            right: -30px;
            bottom: -80px;
        }

        form {
            width: 400px;
            background-color: rgba(255, 255, 255, 0.13);
            position: relative;
            border-radius: 10px;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
            padding: 50px 35px;
        }

            form h3 {
                font-size: 32px;
                font-weight: 500;
                line-height: 42px;
                text-align: center;
                color: black;
            }

        .validation-summary-errors {
            color: red;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-top: 30px;
            font-size: 16px;
            font-weight: 500;
            color: black;
        }

        .input-group {
            position: relative;
            margin-top: 8px;
        }

            .input-group input {
                height: 50px;
                width: 100%;
                background-color: rgba(255, 255, 255, 0.07);
                border-radius: 3px;
                padding-right: 40px; /* Göz veya işaretine yer açmak için padding ekleyin */
                padding-left: 10px; /* Girilen metnin başlangıcı için padding ekleyin */
                font-size: 14px;
                font-weight: 300;
                color: #3b5998;
                border: 1px solid #3b5998;
                box-sizing: border-box; /* İç padding'i kutuya dahil edin */
            }

            .input-group .input-group-text {
                position: absolute;
                top: 50%;
                transform: translateY(-50%);
                right: 10px; /* Sağdan mesafeyi ayarlayın */
                background-color: transparent;
                border: none;
                color: #3b5998;
                font-size: 1.2em;
                cursor: pointer;
            }

        ::placeholder {
            color: #e5e5e5;
        }

        button {
            margin-top: 50px;
            width: 100%;
            background-color: #c63dff;
            color: #ffffff;
            padding: 15px 0;
            font-size: 18px;
            font-weight: 600;
            border-radius: 5px;
            cursor: pointer;
            border: none;
        }

            button:hover {
                background-color: #7b1fa2;
            }

        .social {
            margin-top: 30px;
            display: flex;
            justify-content: center;
        }

            .social div {
                background-color: rgba(255, 255, 255, 0.27);
                width: 150px;
                border-radius: 3px;
                padding: 5px 10px;
                color: #eaf0fb;
                text-align: center;
                margin: 0 10px;
            }

                .social div:hover {
                    background-color: rgba(255, 255, 255, 0.47);
                }

            .social .go {
                background-color: #c63dff;
            }

            .social .fb {
                background-color: #3b5998;
            }

            .social i {
                margin-right: 4px;
            }
    </style>
</head>

<body>
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    <form asp-action="Login">
        <h3>Login Here</h3>

        <div class="text-center mb-3">
            <a href="/" class="back-to-home">
                <i class="fas fa-arrow-left"></i>
            </a>
        </div>
       
        <div asp-validation-summary="All" class="validation-summary-errors"></div>

        <label for="username">Username</label>
        <div class="input-group">
            <input type="email" asp-for="Email" placeholder="Email" id="username" required />
            <span class="input-group-text">@x</span>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>

        <label for="password">Password</label>
        <div class="input-group">
            <input type="password" asp-for="Password" placeholder="Password" id="password-field" required />
            <span class="input-group-text" id="toggle-password">
                <i class="fas fa-eye" id="toggle-icon"></i>
            </span>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>

        <button type="submit">Log In</button>

        <div class="my-2 d-flex justify-content-between align-items-center">
            <a class="auth-link text-black" asp-controller="Account" asp-action="ForgetPassword">Forget Password?</a>
        </div>
    </form>

    <script>
        document.getElementById('toggle-password').addEventListener('click', function () {
            var passwordField = document.getElementById('password-field');
            var passwordFieldType = passwordField.getAttribute('type');
            var toggleIcon = document.getElementById('toggle-icon');
            if (passwordFieldType === 'password') {
                passwordField.setAttribute('type', 'text');
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.setAttribute('type', 'password');
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $("#success-message").fadeOut("slow", function () {
                    $(this).remove();
                });
                $("#error-message").fadeOut("slow", function () {
                    $(this).remove();
                });
            }, 3000);
        });
    </script>
    <style>
        .custom-alert {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1050;
            width: auto;
            min-width: auto;
            max-width: auto;
        }
    </style>

    @if (TempData["SuccessMessage"] != null)
    {
        <div id="success-message" class="alert alert-success custom-alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div id="error-message" class="alert alert-danger custom-alert">
            @TempData["ErrorMessage"]
        </div>
    }



</body>
</html>
